import java.util.ArrayList;

public class Admin {
	
	private ArrayList<String> teacherList;
	
	public Admin() {
		// empty constructor
	}
	
	public ArrayList<String> searchTeacher(String trainingCourse,Uni uni){
		
		// foreach loop to see if the teacher[i] contains this trainingCourse passed
		for(Teacher i:uni.getTeachers()) {
			if(i.getTraining().contains(trainingCourse)) {
				// if has, store teacher`s name to the list
				teacherList.add(i.getName());
			}
		}
		// check if the list is empty
		if(teacherList.isEmpty()) {
			System.out.println("The training has not been taken by any teacher.");
		}
		return teacherList;
	}
	
	
	public ArrayList<TeachingReq> searchCourse(String courseName, Uni uni){
		
		// foreach loop to traverse each course element
		for(Course i:uni.getCourses()) {
			// to see if the course`s name is same as the courseName passed
			if(i.getName().equals(courseName)) {
				return i.getReq();   // if so, return the list of Req
			}
		}return null;
		
	}
}
